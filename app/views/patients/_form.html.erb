<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sex %>
    <%= f.input :dob %>
    <%= f.input :blood_type %>
    <%= f.input :address %>
    <%= f.input :contacts %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
