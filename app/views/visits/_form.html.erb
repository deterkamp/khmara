<%= simple_form_for(@visit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :doctor %>
    <%= f.association :patient %>
    <%= f.input :reason %>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
